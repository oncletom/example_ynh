{
    "name": "Copanier",
    "id": "copanier",
    "packaging_format": 1,
    "description": {
        "en": "A minimalist software to make grouped orders",
        "fr": "Logiciel de gestion des groupements d'achats"
    },
    "version": "1.0~ynh1",
    "url": "https://github.com/spiral-project/copanier",
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "requirements": {
        "yunohost": ">= 3.5"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for copanier",
                    "fr": "Choisissez un nom de domaine pour copanier"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for copanier",
                    "fr": "Choisissez un chemin pour copanier"
                },
                "example": "/copanier",
                "default": "/copanier"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
